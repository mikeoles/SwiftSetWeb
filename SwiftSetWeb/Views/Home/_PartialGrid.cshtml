@model List<Exercises>

<div id="searchHeader">
    <h4 id="ExerciseTitle">@Model.Count() Exercises</h4>
    <input id="randomButton" class="btn btn-info" type="button" value="Choose Random" onclick="location.href='@Url.Action("Random", "Exercises")'" />
</div>
<table class="table table-striped exerciseTable">
    <tbody class="exerciseTableBody">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Name)</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@if (Model.Count() == 0)
{
    <p>No exercises found matching current search</p>
}