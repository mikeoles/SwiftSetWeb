@model List<Exercises>

<div id="searchHeader">
    <h4 id="ExerciseTitle">@Model.Count() Exercises</h4>
    <input id="randomButton" class="btn btn-info" type="button" value="Choose Random" onclick="location.href='@Url.Action("Random", "Exercises")'" />
</div>
<div class="row"></div>
<div id="ExerciseTable">
    @foreach (var item in Model)
    {
        <button class="btn btn-primary resultsButton" type="button" onclick="location.href='@Url.Action("Details","Exercises", new { id = item.Id })'">@item.Name</button>
    }
</div>
@if (Model.Count() == 0)
{
    <p>No exercises found matching current search</p>
}